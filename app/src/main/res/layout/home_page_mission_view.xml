<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/home_page_card_view"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:elevation="30dp"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/mission_view"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/test1"
                    android:scaleType="fitXY"
                    android:clickable="true"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/mission_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/mission_view"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/description_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:maxLines="2"
                    android:minLines="2"
                    android:ellipsize="end"
                    android:text="想找个人帮忙做android项目,要不然最近一直熬夜，已经快要暴毙了，求找个人来求救"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintLeft_toRightOf="@id/mission_view"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mission_title" />

                <TextView
                    android:layout_marginTop="3dp"
                    android:id="@+id/bounty_text"
                    android:text="悬赏:"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/description_text"
                    app:layout_constraintLeft_toRightOf="@id/mission_view"/>


                <TextView
                    android:id="@+id/bounty"
                    android:text="300元"
                    android:textStyle="italic"
                    app:layout_constraintBaseline_toBaselineOf="@id/bounty_text"
                    android:layout_marginStart="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/description_text"
                    app:layout_constraintLeft_toRightOf="@id/bounty_text"/>


                <TextView
                    android:id="@+id/location_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="28dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:minLines="1"
                    android:text="日期:"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/mission_view"
                    app:layout_constraintTop_toBottomOf="@id/description_text" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="2020-06-03 20:23"
                    app:layout_constraintBaseline_toBaselineOf="@id/location_text"
                    app:layout_constraintLeft_toRightOf="@id/location_text"
                    app:layout_constraintTop_toBottomOf="@id/description_text" />

                <TextView
                    android:id="@+id/mission_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="4dp"
                    android:text="任务类型:"
                    android:textStyle="bold"

                    app:layout_constraintLeft_toRightOf="@id/bounty"
                    app:layout_constraintTop_toBottomOf="@id/description_text" />

                <TextView
                    android:id="@+id/mission_type"
                    android:text="跑腿"
                    app:layout_constraintBaseline_toBaselineOf="@id/mission_type_text"
                    android:layout_marginStart="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/bounty_text"
                    app:layout_constraintLeft_toRightOf="@id/mission_type_text"
                   />

                <TextView
                    android:id="@+id/task_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="id"
                    android:visibility="invisible"
                    app:layout_constraintBaseline_toBaselineOf="@id/mission_type_text"

                    app:layout_constraintBottom_toBottomOf="@id/mission_type"
                    app:layout_constraintHorizontal_bias="0.488"
                    app:layout_constraintLeft_toRightOf="@id/mission_type"
                    app:layout_constraintRight_toRightOf="@id/date"
                    app:layout_constraintTop_toBottomOf="@id/bounty_text"
                    app:layout_constraintVertical_bias="0.0" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
