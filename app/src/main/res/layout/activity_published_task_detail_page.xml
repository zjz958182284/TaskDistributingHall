<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TaskDetail.PublishedTaskDetailPage">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/published_task_detail_page_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="发布任务详情"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            tools:ignore="MissingConstraints" />




        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/published_task_detail_page_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/published_task_detail_page_title_text"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="任务标题"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/published_task_detail_page_date_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />


                <TextView
                    android:id="@+id/published_task_detail_page_bounty_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:ems="5"
                    android:text="悬赏:"

                    android:textSize="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/published_task_detail_page_title_text" />

                <TextView
                    android:id="@+id/detail_page_detail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="56dp"
                    android:text="任务描述:"
                    android:textSize="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/published_task_detail_page_date_text" />

                <TextView
                    android:id="@+id/published_task_detail_page_detail_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="8dp"
                    android:ems="5"
                    android:enabled="true"
                    android:textSize="20dp"
                    android:gravity="top"
                    android:maxLines="20"
                    android:minLines="8"
                    android:scrollbars="vertical"
                    android:text="这里是空的......"
                    app:layout_constraintTop_toBottomOf="@id/detail_page_detail_text"
                    tools:layout_editor_absoluteX="9dp" />

                <TextView
                    android:id="@+id/published_task_detail_page_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="16dp"
                    android:text="发布日期:"
                    android:textSize="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/published_task_detail_page_title_text" />


                <TextView
                    android:id="@+id/published_task_detail_page_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="16dp"
                    android:text="任务类型："
                    android:textSize="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/published_task_detail_page_date_text" />

                <ImageView
                    android:id="@+id/published_task_detail_page_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toBottomOf="@id/published_task_detail_page_detail_text"
                    tools:layout_editor_absoluteX="16dp" />

                <Button
                    android:id="@+id/list_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="15dp"
                    android:text="查看请求人列表"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintTop_toBottomOf="@id/published_task_detail_page_image_view" />


                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="15dp"
                    android:text="删除该任务"
                    android:textColor="@color/colorPrimaryDark"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/list_btn" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>