<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TaskDetail.AcceptedTaskDetailPage">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/accepted_task_detail_page_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="发布任务详情"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            tools:ignore="MissingConstraints" />




        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/accepted_task_detail_page_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/accepted_task_detail_page_title_text"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="这里放任务标题"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/accepted_task_detail_page_date_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />


                <TextView
                    android:id="@+id/accepted_task_detail_page_bounty_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:ems="5"
                    android:text="悬赏:300元"

                    android:textSize="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/accepted_task_detail_page_title_text" />

                <TextView
                    android:id="@+id/detail_page_detail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="56dp"
                    android:text="任务描述:"
                    android:textSize="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/accepted_task_detail_page_date_text" />

                <TextView
                    android:id="@+id/accepted_task_detail_page_detail_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="8dp"
                    android:ems="5"
                    android:enabled="true"
                    android:textSize="20dp"
                    android:gravity="top"
                    android:maxLines="20"
                    android:minLines="8"
                    android:scrollbars="vertical"
                    android:text="这里写任务详情,因为要写很多，所以我会当成小学作文来写，2011年,刀剑神域出了，如果记错那就抱歉了，毕竟是小学生作文，kirito,桐人是我的偶像，我想像他一样那么厉害，拿着双刀流吊打boss，感觉无所不能，对我来说就是英雄的存在，就像我家后院的割草机，更重要的是他有一位漂亮的正宫还有无数的后宫。还有必须一提Asuna,是我心中的女神。如果不知道这是什么东西，那我推荐你去科普。我曾经幻想2022年会有像刀剑神域一样的游戏，可是现实总是残酷的...剧终。因为已经到达行数了。"
                    app:layout_constraintTop_toBottomOf="@id/detail_page_detail_text"
                    tools:layout_editor_absoluteX="9dp" />

                <TextView
                    android:id="@+id/accepted_task_detail_page_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="16dp"
                    android:text="发布日期:大理"
                    android:textSize="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/accepted_task_detail_page_title_text" />


                <TextView
                    android:id="@+id/accepted_task_detail_page_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="16dp"
                    android:text="任务类型：跑腿，代理"
                    android:textSize="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/accepted_task_detail_page_date_text" />


                <ImageView
                    android:id="@+id/accepted_task_detail_page_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/add_icon"
                    app:layout_constraintTop_toBottomOf="@id/accepted_task_detail_page_detail_text"
                    tools:layout_editor_absoluteX="-158dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/line1"
                    app:layout_constraintTop_toBottomOf="@id/accepted_task_detail_page_image_view"
                    >

                    <Button
                        android:id="@+id/bounty_got_btn"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"

                        android:layout_weight="1"
                        android:text="已收到酬金"
                        android:textColor="@color/colorPrimaryDark"

                        />

                    <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="28dp"
                    android:text="取消该任务"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:visibility="visible"
                    />
                </LinearLayout>

                <Button
                    android:id="@+id/chat_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"


                    android:text="聊天室"
                    android:textColor="@color/colorPrimaryDark"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/line1"
                     />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>